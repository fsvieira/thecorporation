{
  "name": "the-corporation",
  "version": "0.1.0",
  "main": "electron.js",
  "description": "Is your first job, are strange things happening or is just a normal day at the office?",
  "author": "Filipe Vieira",
  "license": "MIT",
  "homepage": "https://example.com",
  "build": {
    "appId": "com.fsvieira.thecorporation",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "category": "public.app-category.games",
      "target": [
        "zip"
      ],
      "type": "distribution",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "category": "Game",
      "target": [
        "AppImage"
      ],
      "synopsis": "Welcome to the corporation!",
      "description": "Is your first job, are strange things happening or is just a normal day at the office?"
    },
    "icon": "assets/icons/512x512.png"
  },
  "scripts": {
    "serve": "parcel serve index.html --open",
    "serve:dist": "lite-server ../docs",
    "start": "electron . --enable-logging",
    "build": "build -mwl",
    "build:windows": "build -w",
    "build:mac": "build -m",
    "build:linux": "build -l",
    "build:web": "parcel build index.html",
    "build:github": "parcel build index.html --public-url ./ --out-dir ../docs",
    "publish:itch": "butler push exp fsvieira/the-corporation:html5"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "electron": "^3.0.10",
    "electron-builder": "^20.38.2",
    "lite-server": "^2.4.0",
    "parcel": "^1.12.3"
  }
}
